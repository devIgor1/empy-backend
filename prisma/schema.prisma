generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plan {
  id              String   @id @default(uuid())
  namePublic      String
  nameInternal    String?
  precoMensal     Float
  precoAnual      Float
  desconto        Float?     // percentage
  isCustom        Boolean    @default(false)
  qtdCreditosOff  Int
  qtdCreditosOn   String
  ativo           Boolean    @default(true)
  recomendado     Boolean    @default(false)
  paymentLink     String?
  createdAt       DateTime   @default(now())
  purchases       Purchase[]
}

model Purchase {
  id           String         @id @default(uuid())
  customerId   String
  customerName String
  planId       String
  valor        Float
  createdAt    DateTime       @default(now())
  billingCycle BillingCycle
  status       PurchaseStatus
  plan         Plan           @relation(fields: [planId], references: [id])
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

enum PurchaseStatus {
  PAID
  DECLINED_NO_LIMIT
  NOT_AUTHORIZED
}



