generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plan {
  id            String   @id @default(uuid())
  name          String
  monthlyPrice  Float
  annualPrice   Float
  discount      Float?     // percentage
  isCustom      Boolean    @default(false)
  purchases     Purchase[]
  createdAt     DateTime   @default(now())
}

model Purchase {
  id           String         @id @default(uuid())
  customerId   String
  customerName String
  plan         Plan           @relation(fields: [planId], references: [id])
  planId       String
  billingCycle BillingCycle
  valor        Float
  status       PurchaseStatus
  createdAt    DateTime       @default(now())
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

enum PurchaseStatus {
  PAID
  DECLINED_NO_LIMIT
  NOT_AUTHORIZED
}



